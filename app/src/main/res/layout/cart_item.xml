<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/view_shape_off_white_rectangel">


    <ImageView
        android:id="@+id/photo"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/photo"
        android:text="Prodcut name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/up"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/itemName"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/photo"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_quantity_up_green" />

    <TextView
        android:id="@+id/counterTV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/itemName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:layout_toEndOf="@+id/up"
        android:textAlignment="center"
        android:text="1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/down"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/itemName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/counterTV"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_quantity_down_dim" />


    <ImageButton
        android:id="@+id/delete"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/view_shape_grey_all_2_radius"
        android:src="@drawable/ic_delete_white" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="33dp"
        android:layout_below="@+id/delete"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:text="100 L.E"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

</RelativeLayout>